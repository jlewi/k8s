apiVersion: batch/v1
kind: Job
metadata:
  name: example-launcher
spec:  
  template:
    metadata:
      name: example-launcher
    spec:      
      containers:
         - name: tensorflow
           image: {{image}}           
           imagePullPolicy: Always
           workingDir: /opt
           args:
           - python
           - test_program.py
      restartPolicy: OnFailure
